// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("USER") // e.g., "USER", "HR", "ADMIN"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resume    Resume?
  jobs      Job[]    @relation("PostedJobs")
}

model Resume {
  id        String  @id @default(uuid())
  resumeUrl String
  summary   String
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @unique
  status    Boolean @default(false)
}

model Job {
  id              String          @id @default(uuid())
  title           String
  description     String
  company         String
  location        String?
  remote          Boolean         @default(false)
  salaryMin       Int?
  salaryMax       Int?
  salaryCurrency  String?         @default("BDT")
  employmentType  EmploymentType
  experienceLevel ExperienceLevel
  postedById      String
  postedBy        User            @relation("PostedJobs", fields: [postedById], references: [id])
  keywords        Keyword[]       @relation("JobKeywords")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  expiresAt       DateTime?
  isActive        Boolean         @default(true)
}

model Keyword {
  id        String   @id @default(uuid())
  name      String   @unique
  jobs      Job[]    @relation("JobKeywords")
  createdAt DateTime @default(now())
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  TEMPORARY
  INTERNSHIP
  VOLUNTEER
}

enum ExperienceLevel {
  ENTRY_LEVEL
  ASSOCIATE
  MID_SENIOR_LEVEL
  DIRECTOR
  EXECUTIVE
}
